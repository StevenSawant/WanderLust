<%- layout("/layouts/boilerplate.ejs") %>
<body>
  <h2>All Listings</h2>
  <!-- <form action="/listings/new">
      <button>Create New Listings</button>
    </form> -->
  <%= successMsg %>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
         <div class="card-img-overlay"><%= listing.title %></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <!-- <ul>
    <% for(listing of allListings) { %>
    <li><a href="/listings/<%= listing._id %>"><%= listing.title %></a></li>
    <% } %>
  </ul> -->
</body>
